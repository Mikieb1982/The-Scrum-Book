{
  "hosting": {
    "public": "the-turnstile-nextjs/out",
    "ignore": ["**/.*", "**/node_modules/**"],
    "cleanUrls": true,
    "headers": [
      { "source": "**/*.@(js|css)", "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }] },
      { "source": "/index.html", "headers": [{ "key": "Cache-Control", "value": "no-store" }] }
    ],
    "rewrites": [
      { "source": "/api/**", "function": "api" }
    ]
  }
}
