{
  "functions": { "source": "functions" },
  "hosting": {
    "public": "the-turnstile-nextjs/out",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "/api/**", "function": "api" },
      { "source": "**", "destination": "/index.html" }
    ],
    "headers": [
      { "source": "**", "headers": [{ "key": "Cache-Control", "value": "public, max-age=600" }] }
    ]
  }
}
